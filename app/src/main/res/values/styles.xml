<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="SearchActivityTheme" parent="AppTheme">
        <item name="android:windowAnimationStyle">@style/AnimSearchActivity</item>
    </style>

    <style name="AnimSearchActivity" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/search_activity_in</item>
        <item name="android:activityCloseExitAnimation">@anim/search_activity_out</item>
    </style>

    <style name="CollapsingText">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="ExpandedText">
        <item name="android:textSize">28sp</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

</resources>
