<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="4dp"
    android:layout_marginEnd="8dp"
    android:layout_marginStart="8dp"
    android:layout_marginTop="4dp"
    android:foreground="?attr/selectableItemBackground">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <ImageView
            android:id="@+id/iv_search_movie"
            android:layout_width="60dp"
            android:layout_height="80dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:scaleType="centerCrop"
            tools:src="@drawable/img_load"/>

        <TextView
            android:id="@+id/tv_search_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_toEndOf="@id/iv_search_movie"
            android:ellipsize="end"
            android:maxLines="2"
            android:textColor="@color/colorTextBlack_2"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/tv_search_t1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@id/tv_search_title"
            android:layout_below="@id/tv_search_title"
            android:layout_marginTop="4dp"
            android:textColor="@color/colorTextBlack_3"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/tv_search_t2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@id/tv_search_title"
            android:layout_below="@id/tv_search_t1"
            android:textColor="@color/colorTextBlack_3"
            android:textSize="14sp"/>
    </RelativeLayout>
</android.support.v7.widget.CardView>