<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="1dp"
    android:background="@drawable/bg_white_ripple"
    android:paddingBottom="6dp"
    android:paddingEnd="16dp"
    android:paddingStart="16dp"
    android:paddingTop="6dp">

    <ImageView
        android:id="@+id/iv_movie_img"
        android:layout_width="90dp"
        android:layout_height="130dp"
        tools:src="@drawable/img_load"
        android:scaleType="centerCrop"/>

    <TextView
        android:id="@+id/tv_movie_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/iv_movie_img"
        android:layout_marginStart="8dp"
        android:layout_toEndOf="@id/iv_movie_img"
        android:textColor="@color/colorTextBlack_1"
        android:textSize="18sp"
        tools:text="金刚：骷髅岛"/>

    <TextView
        android:id="@+id/tv_movie_t_en"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/tv_movie_title"
        android:layout_below="@id/tv_movie_title"
        android:textColor="@color/colorTextBlack_4"
        android:textSize="12sp"
        tools:text="Kong: Skull Island"/>

    <TextView
        android:id="@+id/tv_movie_actor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/iv_movie_img"
        android:layout_alignStart="@id/tv_movie_title"
        android:textColor="@color/colorTextBlack_2"
        android:textSize="14sp"
        tools:text="主演: 汤姆·希德勒斯顿，布丽·拉尔森"/>

    <TextView
        android:id="@+id/tv_movie_director"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/tv_movie_actor"
        android:layout_alignStart="@id/tv_movie_title"
        android:textColor="@color/colorTextBlack_2"
        android:textSize="14sp"
        tools:text="导演: 乔丹·沃格-罗伯茨"/>

    <TextView
        android:id="@+id/tv_movie_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/tv_movie_director"
        android:layout_alignStart="@id/tv_movie_title"
        android:textColor="@color/colorTextBlack_2"
        android:textSize="14sp"
        tools:text="动作 / 冒险 / 奇幻"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/tv_movie_type"
        android:layout_alignStart="@id/tv_movie_title"
        android:gravity="bottom"
        android:orientation="horizontal">

        <RatingBar
            android:id="@+id/rb_rating"
            style="@style/Widget.AppCompat.RatingBar.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:layout_marginEnd="4dp"
            android:isIndicator="true"
            android:numStars="5"/>

        <TextView
            android:id="@+id/tv_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorTextBlack_3"
            android:textSize="14sp"
            tools:text="7.3"/>
    </LinearLayout>

</RelativeLayout>