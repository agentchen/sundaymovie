<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="1dp"
    android:background="@drawable/bg_white_ripple"
    android:paddingBottom="6dp"
    android:paddingEnd="16dp"
    android:paddingStart="16dp"
    android:paddingTop="6dp">

    <ImageView
        android:id="@+id/iv_movie_img"
        android:layout_width="90dp"
        android:layout_height="130dp"
        android:scaleType="centerCrop"
        tools:src="@drawable/img_load"/>

    <TextView
        android:id="@+id/tv_movie_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_toEndOf="@id/iv_movie_img"
        android:textColor="@color/colorTextBlack_1"
        android:textSize="18sp"
        tools:text="金刚：骷髅岛"/>

    <TextView
        android:id="@+id/tv_movie_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/tv_movie_title"
        android:layout_below="@id/tv_movie_title"
        android:textColor="@color/colorTextBlack_2"
        android:textSize="14sp"
        tools:text="2月17日上映"/>

    <TextView
        android:id="@+id/tv_movie_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/tv_movie_title"
        android:layout_below="@id/tv_movie_date"
        android:layout_marginTop="8dp"
        android:textColor="@color/colorTextBlack_2"
        android:textSize="14sp"
        tools:text="动作 / 冒险 / 奇幻"/>

    <TextView
        android:id="@+id/tv_movie_director"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/tv_movie_title"
        android:layout_below="@id/tv_movie_type"
        android:textColor="@color/colorTextBlack_2"
        android:textSize="14sp"
        tools:text="导演: 乔丹·沃格-罗伯茨"/>

    <TextView
        android:id="@+id/tv_movie_actor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/tv_movie_title"
        android:layout_below="@id/tv_movie_director"
        android:textColor="@color/colorTextBlack_2"
        android:textSize="14sp"
        tools:text="主演: 汤姆·希德勒斯顿，布丽·拉尔森"/>

</RelativeLayout>